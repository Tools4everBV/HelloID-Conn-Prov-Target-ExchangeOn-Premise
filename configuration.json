[
    {
      "key": "exchange.connectionUri",
      "type": "input",
      "defaultValue": "",
      "templateOptions": {
        "label": "Exchange Connection URL",
        "placeholder": "http://<servername>/Powershell",
        "description": "The Exchange connection url for setting up powershell sessions",
        "required": true
      }
    },
    {
      "key": "exchange.username",
      "type": "input",
      "defaultValue": "",
      "templateOptions": {
        "label": "Exchange Username",
        "placeholder": "Account with enough privileges in AD and Exchange",
        "required": true
      }
    },
    {
      "key": "exchange.password",
      "type": "input",
      "defaultValue": "",
      "templateOptions": {
        "label": "Exchange Password",
        "type": "password",
        "placeholder": "",
        "description": "",
        "required": true
      }
    },
    {
      "key": "exchange.authenticationmode",
      "type": "select",
      "templateOptions": {
        "label": "AUTHENTICATION MODE",
        "placeholder": "Please select an option",
        "options": [
          {
            "value": "Default",
            "label": "Default"
          },
          {
            "value": "Basic",
            "label": "Basic"
          },
          {
            "value": "Credssp",
            "label": "Credssp"
          },
          {
            "value": "Digest",
            "label": "Digest"
          },
          {
            "value": "Kerberos",
            "label": "Kerberos"
          },
          {
            "value": "Negotiate",
            "label": "Negotiate"
          },
          {
            "value": "NegotiateWithImplicitCredential",
            "label": "NegotiateWithImplicitCredential"
          }
        ]
      }
    },
    {
      "key": "exchange.sharedMailboxContainer",
      "type": "input",
      "defaultValue": "",
      "templateOptions": {
        "label": "OU with Shared Mailbox Users",
        "placeholder": "OU=<container>,DC=domain,DC=local",
        "description": "The AD container in which the SharedMailbox users exists",
        "required": true
      }
    },
    {
      "key": "config.IsDebug",
      "type": "checkbox",
      "defaultValue": false,
      "templateOptions": {
        "label": "Verbose logging for department group management",
        "required": false
      }
    }
  ]